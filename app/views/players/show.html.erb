<div class="container-fluid">
   <div class="row">
      <%= render "/layouts/roaster" %>
      <!--/span-->
      <div class="col-sm-6 col-md-6">
        <%= render "/layouts/alerts" %>
       <div class="jumbotron custum-jumbotron">
          
          <% if current_user.present? %>
            <h1 class="center">Create Post</h1>
            
            <% post = Post.new %>
            <%= form_with(model: post, local: true) do |f| %>
              <fieldset style="text-align: center;">
                <div class="form-group">
                  <%= f.text_field :title, autofocus: true,:placeholder=>"Title",:class=>"form-control" %>
                </div>
                <div class="form-group">
                  <%= f.text_area :description,:placeholder=>"Description",:class=>"form-control",:minlength=>10,maxlength: 250 %>
                </div>
                <div class="form-group">
                  <%= f.file_field :image %>
                </div>
                <%= f.hidden_field :user_id,:value=>current_user.id %>
                <%= f.hidden_field :player_id,:value=>@player.id %>
                <%= f.submit "Create",:class=>"btn btn-primary btn-sign-in" %>
              </fieldset>
            <% end %>
          <% end %>
  
          <hr>
          <div class="media">
            <a class="pull-left" href="#">
            <% if @player.image.present? %>
              <%= image_tag @player.image.url(:profile),class: "media-object" %>
            <% else %>
              <%= image_tag "index.jpeg",class: "media-object" %>
            <% end %>
           </a>
           <div class="media-body">
              <h4 class="media-heading"><%= link_to @player.name,player_path(@player) %>
              <span class="pull-right"><%= link_to "Add to Roaster",add_roaster_path(@player.id),:class=>"btn btn-success" %></span></h4>
              <p><%= @player.about %></p>
           </div>
          </div>
          <div class="clearfix"></div>

          <!--Testimonial Section-->
          <% @player.posts.where('spam !=?',true).each do |post| %>
	          <div class="fb-testimonial">
	             <div class="fb-testimonial-inner">
	                <div class="fb-profile">
	                	<% if post.image.present? %>
	                    <%= link_to post_path(post) do %>
                        <%= image_tag post.image.url(:profile),class: "facebook-thumb" %>
                      <% end %>
	                  <% else %>
                      <%= link_to post_path(post) do %>
	                      <%= image_tag "post.png",class: "facebook-thumb" %>
                      <% end %>
	                  <% end %>
	        
	                   <p class="facebook-name"><%= post.player.name %> <i class="fa fa-caret-right"></i> <%= link_to post.user.name,user_path(post.user) %> <br><span class="facebook-date"><%= post.created_at.to_date.strftime('%a %b %d') %>  <i class="fa fa-globe"></i></span></p>
	                </div>
	                <div class="fb-testimonial-copy">
	                   <p><%= post.description %>
	                   </p>
	                </div>
	             </div>
	          </div>
	          <hr />
          <% end %>
          
       </div>
      </div>
      <!--/span-->
      <%= render "/layouts/right_panel" %>
      <!--/span-->
   </div>
   <!--/row-->
</div>

