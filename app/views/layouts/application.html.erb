<!DOCTYPE html>
<html>
  <head>
    <title>Social</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<div class="navbar navbar-fixed-top navbar-default mynav">
         <div class="container">
            <div class="navbar-header"><%= link_to "NAMPIT",root_path,:class=>"navbar-brand" %><a class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
               <span class="glyphicon glyphicon-bar"></span>
               <span class="glyphicon glyphicon-bar"></span>
               <span class="glyphicon glyphicon-bar"></span>
               </a>
            </div>
            <div class="navbar-collapse">
               <ul class="nav navbar-nav">
                  <li class="font_18"><%= link_to "Players",players_path %></li>
                  <li class="font_18"><%= link_to "Users",users_path %></li>
               </ul>
               <ul class="nav navbar-nav navbar-right links">
               		<% if user_signed_in? %>
                    <%= link_to "Messages", "#",:class=>"btn btn-sm btn-success"%>
               			<%= link_to "Edit Profile", edit_user_registration_path,:class=>"btn btn-sm btn-info"%>
                  	<%= link_to "Logout", destroy_user_session_path, method: :delete,:class=>"btn btn-sm btn-danger"%>
                    <%#= link_to "My Posts",my_posts_path,:class=>"btn btn-sm btn-success" %>
                  <% else %>
                  	<%= link_to "Log in", new_user_session_path,:class=>"btn btn-sm btn-info" %>
                  	<%= link_to "Sign up", new_user_registration_path,:class=>"btn btn-sm btn-info" %>
                  <% end %>
               </ul>

                <%= form_tag("/search", :method => :get,:class=>"navbar-form navbar-right" ) do %>
                  <div class="form-group">
                    <%= text_field_tag :query,@query,:placeholder=>"Search Nampit",:class=>"form-control" %>
                  </div>
                  
                  <%= submit_tag("Search",:class=>"btn btn-success") %>
                <% end %>
            </div>
            <!--/.navbar-collapse -->
         </div>
    </div>
    <section id="breaking-news">
       <div class="container">
          <div class="sitewidth">
             <div class="br-title">Trending Now:</div>
             <p class="marquee">
                <ul>
                  <% Player.joins(:posts).select("players.*, count(posts.id) as scount").group("players.id").order("scount DESC").last(10).each do |player| %>
                    <%# user_name = User.find_by_id(post.user_id).name %>
                    <% player_name = Player.find_by_id(player.id).name %>
                    <li style="margin-left: 15px;margin-right: 15px"><%= link_to "#{player_name.capitalize}",player_path(player)  %></li>
                  <% end %>
                </ul>
             </p>
          </div>
       </div>
    </section>
    <%= yield %>
  </body>
</html>
