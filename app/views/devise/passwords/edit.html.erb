<div class="container">
  <div class="row login-form">
    <h1 class="text-center">CHANGE YOUR PASSWORD</h1>
    <div class="col-md-4 text-center"></div>
    <div class="col-md-4 text-center">                       
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <fieldset>
          <%= f.hidden_field :reset_password_token %>
          <div class="form-group">
            <%= f.password_field :password, autofocus: true, autocomplete: "off",:class=>"form-control",:placeholder=>"Password" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "off",:class=>"form-control",:placeholder=>"Password Confirmation" %>
          </div>
          
          <%= f.submit "Change my password",:class=>"btn btn-primary btn-sign-in" %>
        </fieldset>
        <%= link_to "Log in", new_session_path(resource_name) %>
      <% end %>
    </div>
    <div class="col-md-4 text-center"></div>
  </div>
</div>
